<% provide :title, t(".title") %>
<section id="slider">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <%= render "layouts/slider" %>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="left-sidebar">
          <h2><%= t ".category" %></h2>
          <div class="panel-group category-products" id="accordian">
          </div>
          <div class="price-range">
            <h2><%= t ".price" %></h2>
            <div class="well text-center" id="range-price">
            </div>
          </div>
          <div class="shipping text-center">
            <%= image_tag("home/shipping.jpg") %>
            <%= image_tag("home/pricing.png", class: "pricing") %>
          </div>
        </div>
      </div>
      <div class="col-sm-9 padding-right">
        <div class="features_items" id="product-js">
          <h2 class="title text-center"><%= t(".features") %></h2>
        </div>
      </div>
    </div>
  </div>
</section>
