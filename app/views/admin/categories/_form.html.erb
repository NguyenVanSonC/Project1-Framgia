<%= form_for [:admin, @category] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <br>
  <%= f.collection_select :child_of, Category.all, :id, :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
