<% @products.each do |product| %>
  <div class="col-sm-4">
    <div class="product-image-wrapper">
      <div class="single-products">
          <div class="productinfo text-center">
            <%= image_tag product.image %>
            <h2>
              <%= product.cost %>
              <%= t ".usd" %>
            </h2>
            <p><%= link_to product.name, product_path(product) %></p>
            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i><%= t ".add-cart" %></a>
          </div>
          <div class="product-overlay">
            <div class="overlay-content">
              <h2>
                <%= product.cost %>
                <%= t ".usd" %>
              </h2>
              <p><%= link_to product.name, controller: "products", action: "show", id: product.id %></p>
              <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i><%= t "products.home.add-cart" %></a>
            </div>
          </div>
      </div>
      <div class="choose">
        <ul class="nav nav-pills nav-justified">
          <li><a href="#"><i class="fa fa-plus-square"></i><%= t ".add-wishlist" %></a></li>
          <li><a href="#"><i class="fa fa-plus-square"></i><%= t ".add-compare" %></a></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
