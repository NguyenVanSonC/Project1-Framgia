<% if product.able? %>
  <div class="col-sm-4">
    <div class="product-image-wrapper">
      <div class="single-products">
          <div class="productinfo text-center">
            <%= image_tag product.image %>
            <h2>
              <%= product.cost %>
              <%= t ".usd" %>
            </h2>
            <p><%= product.name %></p>
            <%= link_to add_cart_path(product_id: product.id, size_id: Settings.size_default, quantity: Settings.quantity_default), class: "btn btn-default add-to-cart" do %>
              <i class="fa fa-shopping-cart"></i>
              <%= t ".add-cart" %>
            <% end %>
          </div>
          <div class="product-overlay">
            <div class="overlay-content">
              <h2>
                <%= product.cost %>
                <%= t ".usd" %>
              </h2>
              <p><%= product.name %></p>
              <%= link_to add_cart_path(product_id: product.id, size_id: Settings.size_default, quantity: Settings.quantity_default), class: "btn btn-default add-to-cart" do %>
                <i class="fa fa-shopping-cart"></i>
                <%= t "products.home.add-cart" %>
              <% end %>
            </div>
          </div>
      </div>
      <div class="choose">
        <ul class="nav nav-pills nav-justified">
          <li>
            <%= link_to product do %>
              <i class="fa fa-plus-square"></i> <%= t ".seemore" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
