<% if category.parent.blank? && category.childs.blank? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <%= link_to category.name, filter_items_path(cate_id: category.id), remote: true %>
      </h4>
    </div>
  </div>
<% elsif category.childs.present? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordian" href="#cate-<%= category.id %>">
          <span class="badge pull-right"><i class="fa fa-plus"></i></span>
          <%= category.name %>
        </a>
      </h4>
    </div>
    <div id="cate-<%= category.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <ul>
          <%= render partial: "categories/sub_categories", collection: category.childs, as: :sub_categories %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
