<% provide :title, t(".title") %>
<h4><%= t ".header" %></h4>
<div class="container">
  <div class="table-wrapper">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".unit_total" %></th>
        <th><%= t ".sub_total" %></th>
        <th><%= t ".address" %></th>
        <th><%= t ".status" %></th>
        <th><%= t ".date" %></th>
        <th><%= t ".show" %></th>
        <th><%= t ".action" %></th>
      </tr>
      </thead>
      <tbody>
        <%= render partial: "shippings/order_items", collection: @orders, as: :order %>
      </tbody>
    </table>
  </div>
</div>
