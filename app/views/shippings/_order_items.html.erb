<% if order.processing? %>
  <tr id="order-receive-<%= order.id %>">
    <td><%= order.id %></td>
    <td><%= order.total %></td>
    <td><%= order.subtotal %></td>
    <td><%= order.address %></td>
    <td id="status-<%= order.id %>"><%= render partial: "shippers/status_order", locals: {order: order} %></td>
    <td><%= order.created_at %></td>
    <td><%= link_to t(".show"), order, class: "btn btn-danger", id: "show_order" %></td>
    <td id="receive-<%= order.id %>">
      <% if check_receive? order, current_user.shipper %>
        <%= render partial: "shippings/button_not_receive", locals: {order: order} %>
      <% else %>
        <%= render partial: "shippings/button_receive", locals: {order: order} %>
      <% end %>
    </td>
  </tr>
<% end %>
