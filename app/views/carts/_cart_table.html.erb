<tr id="cart-<%= product.id %>">
  <td class="cart_product">
    <%= image_tag product.image %>
  </td>
  <td class="cart_description">
    <h4><a href=""><%= product.name %></a></h4>
    <p><%= t ".id" %><%= product.id %></p>
  </td>
  <td class="cart_price">
    <p><%= t ".$" %><%= product.cost %></p>
  </td>
  <td class="cart_quantity">
    <div class="cart_quantity_button">
      <%= link_to t(".decrease"), decrease_path(product_id: product.id), class:"cart_quantity_down", onclick: "decreaseValue(#{product.id})" %>
      <input class="cart_quantity_input" type="text" id="number-<%= product.id %>" name="quantity" value="<%= "#{product.quantity_cart}" %>" autocomplete="off" size="2">
      <%= link_to t(".increase"), increase_path(product_id: product.id), class:"cart_quantity_up", onclick: "increaseValue(#{product.id})" %>
    </div>
  </td>
  <td class="cart_total">
    <p class="cart_total_price"><%= product.size_cart %></p>
  </td>
  <td class="cart_total">
    <p class="cart_total_price"><%= t ".$" %><%= product.total_cart %></p>
  </td>
  <td class="cart_delete">
    <%= link_to remove_cart_path(product_id: product.id), method: :delete, data: { confirm: t(".sure") }, remote: true, class: "cart_quantity_delete" do %>
      <i class="fa fa-times"></i>
      <%= t ".delete" %>
    <% end %>
  </td>
</tr>
