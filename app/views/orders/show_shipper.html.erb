<% if @shipper %>
  <% provide :title, @shipper.user.name %>
  <h2 class="h2-user"><%= t ".user_profile" %></h2>
  <div class="card">
    <%= image_tag @shipper.user.avatar.url if @shipper.user.avatar? %>
    <h1><%= @shipper.user.name %></h1>
    <p class="title"><% @shipper.user.address %></p>
    <p><%= t ".email" %><%= @shipper.user.email %></p>
    <p><%= t ".age" %><%= @shipper.user.age %></p>
    <p><%= t ".birthday" %><%= @shipper.user.birthday %></p>
    <p><%= t ".phone" %><%= @shipper.user.phone_number %></p>
    <p><%= t ".gender" %><%= @shipper.user.gender %></p>
    <p><%= t ".company" %><%= @shipper.company %></p>
    <p><%= t ".moto_number" %><%= @shipper.motobike_number %></p>
    <p><%= t ".moto_color" %><%= @shipper.motobike_color %></p>
    <p><%= t ".id_number" %><%= @shipper.id_number %></p>
    <div>
      <a href="#"><i class="fa fa-dribbble"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-linkedin"></i></a>
      <a href="#"><i class="fa fa-facebook"></i></a>
    </div>
  </div>
<% end %>
