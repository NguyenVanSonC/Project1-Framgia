<tr id="order-<%= order.id %>">
  <td><%= order.id %></td>
  <td><%= order.total %></td>
  <td><%= order.subtotal %></td>
  <td><%= order.address %></td>
  <td><span class="status text-<%= order.status %>">&bull;</span><%= order.status %></td>
  <td><%= order.created_at %></td>
  <td><%= link_to t(".show"), order, class: "btn btn-danger", id: "show_order" %></td>
  <td><%= link_to t(".delete"), order, method: :delete, data: { confirm: t(".sure") }, remote: true, class: "btn btn-danger", id: "button_order" %></td>
  <% unless order.processing? %>
    <td><%= link_to t(".show_shipper"), show_shipper_path(id: order.id), class: "btn btn-danger", id: "show_order" %></td>
  <% end %>
</tr>