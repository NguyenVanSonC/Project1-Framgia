<% provide :title, t(".title") %>
<h4><%= t ".header" %></h4>
<div class="container">
  <div class="table-wrapper">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".unit_total" %></th>
        <th><%= t ".quantity" %></th>
        <th><%= t ".sub_total" %></th>
      </tr>
      </thead>
      <tbody>
        <% @order_items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.product_name %></td>
            <td><%= item.product.cost %></td>
            <td><%= item.quantity %></td>
            <td><%= item.total_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>