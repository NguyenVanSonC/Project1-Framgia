      <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".unit_total" %></th>
        <th><%= t ".sub_total" %></th>
        <th><%= t ".address" %></th>
        <th><%= t ".status" %></th>
        <th><%= t ".date" %></th>
        <th><%= t ".show" %></th>
        <th><%= t ".delete" %></th>
      </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>
  </div>
</div>