<header id="header">
  <div class="header-middle">
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <div class="logo pull-left">
            <%= link_to image_tag("home/logo.png"), root_path %>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="shop-menu pull-right">
            <ul class="nav navbar-nav">
              <li><%= link_to t(".signup"), signup_path %></li>
              <li><a href="#"><i class="fa fa-star"></i><%= t ".wishlist" %> </a></li>
              <li><a href="checkout.html"><i class="fa fa-crosshairs"></i><%= t ".checkout" %></a></li>
              <li><a href="cart.html"><i class="fa fa-shopping-cart"></i><%= t ".cart" %></a></li>
              <% if logged_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= t ".account" %><i class="fa fa-angle-down"></i>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t(".profile"), current_user %></li>
                    <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
                    <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
                  </ul>
                </li>
              <% else %>
                <li>
                  <%= link_to login_path do %>
                    <i class="fa fa-lock"></i>
                    <%= t ".login" %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header-bottom">
    <div class="container">
      <div class="row">
        <div class="col-sm-9">
          <div class="mainmenu pull-left">
            <ul class="nav navbar-nav collapse navbar-collapse">
              <li><%= link_to t(".home"), root_path %></li>
              <li class="dropdown"><a href="#"><%= t ".shop" %><i class="fa fa-angle-down"></i></a>
                <ul role="menu" class="sub-menu">
                  <li><a href="shop.html"><%= t ".products" %></a></li>
                  <li><a href="product-details.html"><%= t ".products-details" %></a></li>
                </ul>
              </li>
              <li class="dropdown"><a href="#"><%= t ".blog" %><i class="fa fa-angle-down"></i></a>
                <ul role="menu" class="sub-menu">
                  <li><a href="blog.html"><%= t ".blog-list" %></a></li>
                  <li><a href="blog-single.html"><%= t ".blog-single" %></a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="search_box pull-right">
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
